@{
    
    ViewData["Title"] = "Home Page";
}
<script src="https://cdn.tailwindcss.com"></script>
<div style="position:absolute; top:90px;">
    <!-- Hero Section -->
    <section class="text-center py-20 bg-gradient-to-r from-indigo-500 to-purple-600 text-white">
        <div class="container mx-auto">
            <h1 class="text-4xl font-extrabold mb-4">Partner with Us & Grow Your Business</h1>
            <p class="text-lg mb-6">Join our Partner Management System to create offers, get approvals, and implement them efficiently.</p>
            <a href="/Partner/DAshboard" class="px-6 py-3 bg-white text-indigo-600 font-bold rounded-md hover:bg-gray-200">
                Sign Up Now
            </a>
        </div>
    </section>

    <!-- How It Works -->
    <section class="container mx-auto py-16">
        <h2 class="text-3xl font-bold text-center mb-10">How It Works</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 text-center">
            <div class="bg-white p-6 shadow-md rounded-lg">
                <h3 class="text-xl font-semibold mb-2">📌 Register as a Partner</h3>
                <p>Create your account and get access to the Partner Dashboard.</p>
            </div>
            <div class="bg-white p-6 shadow-md rounded-lg">
                <h3 class="text-xl font-semibold mb-2">📝 Generate Offers</h3>
                <p>Submit your business offers for review by our admin team.</p>
            </div>
            <div class="bg-white p-6 shadow-md rounded-lg">
                <h3 class="text-xl font-semibold mb-2">✅ Approval & Implementation</h3>
                <p>Once approved, your offers go live for customers.</p>
            </div>
        </div>
    </section>

    <!-- Benefits Section -->
    <section class="bg-gray-200 py-16">
        <div class="container mx-auto text-center">
            <h2 class="text-3xl font-bold mb-10">Why Join Us?</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <div class="bg-white p-6 rounded-lg shadow-md">
                    <h3 class="text-xl font-semibold mb-2">📈 Increase Revenue</h3>
                    <p>Reach new customers and expand your business with ease.</p>
                </div>
                <div class="bg-white p-6 rounded-lg shadow-md">
                    <h3 class="text-xl font-semibold mb-2">⚡ Easy Offer Management</h3>
                    <p>Submit, modify, and track your offers all in one place.</p>
                </div>
                <div class="bg-white p-6 rounded-lg shadow-md">
                    <h3 class="text-xl font-semibold mb-2">🔒 Secure & Reliable</h3>
                    <p>We ensure safe transactions and smooth business operations.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Testimonials -->
    <section class="py-16">
        <div class="container mx-auto text-center">
            <h2 class="text-3xl font-bold mb-10">What Our Partners Say</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="bg-white p-6 rounded-lg shadow-md">
                    <p class="italic">"Partnering with this system has boosted our sales significantly!"</p>
                    <h3 class="text-lg font-semibold mt-4">- Alex Johnson</h3>
                </div>
                <div class="bg-white p-6 rounded-lg shadow-md">
                    <p class="italic">"The approval process is smooth, and we love the flexibility!"</p>
                    <h3 class="text-lg font-semibold mt-4">- Emily Carter</h3>
                </div>
            </div>
        </div>
    </section>

    <!-- Call to Action -->
    <section class="py-16 mb-8 bg-indigo-600 text-white text-center">
        <h2 class="text-3xl font-bold mb-4">Already a Partner</h2>
        <p class="mb-6">Start generating offers and growing your business!</p>
        <a href="/Identity/Account/Login" class="px-6 py-3 bg-white text-indigo-600 font-bold rounded-md hover:bg-gray-200">Login Now</a>
    </section>


</div>
